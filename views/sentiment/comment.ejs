<!-- views/sentimentView.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sentiment Analysis</title>
  </head>
  <body>
    <h1>Text Analysis Results</h1>
    <p><strong>Input Text:</strong> <%= text %></p>

    <h2>Sentiment Analysis</h2>
    <p>Sentiment Score: <%= analysis.score %></p>
    <p>Category: <%= analysis.category %></p>

    <h2>Detected Problem Categories</h2>
    <% if (categories.length) { %>
    <ul>
      <% categories.forEach(category => { %>
      <li><%= category %></li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No common problems detected.</p>
    <% } %>
  </body>
</html>
